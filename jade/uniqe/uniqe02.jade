include ./../inc/_nav-list.jade
extends ../inc/_head.jade

block title
	title Threejs Uniqe Torus Sample

block content
	h1 トーラスオブジェクト

	mixin list(1)

	script(src="../common/threejs/build/three.min.js")
	script
		:coffee
			window.addEventListener "DOMContentLoaded", ->
				camera = ""
				scene = ""
				renderer = ""

				init = ->
					###
					 * カメラの設定
					###
					width = window.innerWidth
					height = window.innerHeight
					fov = 45
					aspect = width / height
					near = 1
					fav = 1000

					camera = new THREE.PerspectiveCamera fov, aspect, near, fav
					camera.position.set 50, 50, 150
					camera.up.set 0, 0, 1
					camera.lookAt {x: 0, y: 0, z: 0}


					###
					 * シーンの作成
					###
					scene = new THREE.Scene


					###
					 * 軸ヘルパー
					###
					axis = new THREE.AxisHelper 100
					axis.position.set 0, 0, 0
					scene.add axis


					###
					 * メッシュの作成
					###
					#ジオメトリの作成
					geometry = new THREE.TorusKnotGeometry 40, 5, 50, 50, 1, 1, 2

					#マテリアルの作成
					material = new THREE.MeshNormalMaterial {shading: THREE.SmoothShading}

					torusKnot = new THREE.Mesh geometry, material
					scene.add torusKnot


					###
					 * レンダラーの作成
					###
					renderer = new THREE.WebGLRenderer
					renderer.setSize width, height
					document.body.appendChild renderer.domElement
					renderer.render scene, camera


				init()
